        //INICIO ACTIVAR
        function mostrarMensajeActivar(elemento) {

            let idImpresora = $(elemento).attr("data-impresoraId")
            //INICIO
            Swal.fire({
                title: "¿Estas seguro en activar?",
                //text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Si",
                cancelButtonText: "No"
            }).then((result) => {
                if (result.isConfirmed) {

                    $.ajax({
                        url: "/Impresora/Activar",
                        data: { idImpresora: idImpresora },
                        type: "POST",
                        success: function (response) {
                            if (response > 0) {
                                llenarTablaImpresoras()
                                swal.fire({
                                    icon: "success",
                                    buttonsStyling: false,
                                    confirmButtonText: "Ok!",
                                    title: "Registro activado con éxito!",
                                    customClass: {
                                        confirmButton: "btn font-weight-bold btn-light-primary"
                                    }
                                }).then(function () {
                                    //KTUtil.scrollTop();
                                });
                            } else {
                                swal.fire({
                                    icon: "error",
                                    buttonsStyling: false,
                                    confirmButtonText: "Ok!",
                                    title: "Ocurrio un error, por favor contacte a su administrador!",
                                    customClass: {
                                        //confirmButton: "btn font-weight-bold btn-light-primary"
                                    }
                                }).then(function () {
                                    KTUtil.scrollTop();
                                });
                            }
                        }
                    })

                }
            });
            //
        }
