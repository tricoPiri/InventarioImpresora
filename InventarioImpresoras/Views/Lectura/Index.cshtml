@using System.Security.Claims;
@section CSS {
    <link href="~/css/dataTable/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/dataTable/dataTablesPersonalizados.css" rel="stylesheet" type="text/css" />
}
@Html.Partial("~/Views/Shared/_HeaderMobile.cshtml")
<div class="d-flex flex-column flex-root">
    <div class="d-flex flex-row flex-column-fluid page">
        @Html.Partial("~/Views/Shared/_Menu.cshtml")
        <div class="d-flex flex-column flex-row-fluid wrapper" id="kt_wrapper">
            @Html.Partial("~/Views/Shared/_Header.cshtml")
            <div class="content d-flex flex-column flex-column-fluid" id="kt_content">
                <div class="d-flex flex-column-fluid">
                    <div class="container">
                        <div>
                            <div class="card-header">
                                <div class="card-title">
                                    <h3 class="card-label">Consulta de lecturas</h3>
                                </div>
                                <div id="cardBody" class="card-body" style="visibility:hidden;position: relative;z-index: 1;text-align: center;">
                                    <div id="spinner" class="spinner-border" role="status" style="visibility: visible;position: absolute;z-index: 1;top: 40%;">
                                        <span class="sr-only">Loading...</span>
                                    </div>
                                    <div class="row">
                                        <div class="form-group">
                                            <div class="col-2" style="text-align:left;">
                                                <button id="btnAgregar" type="reset" class="btn btn-primary mr-2">Agregar</button>
                                            </div>
                                        </div>
                                    </div>
                                    <table id="tablaLecturas" class="table table-bordered table-hover" style="text-align:center !important;  cursor: pointer !important;">
                                        <thead class="theadDataTable">
                                            <tr>
                                                <th>Impresora</th>
                                                <th>Departamento</th>
                                                <th>Lectura anterior</th>
                                                <th>Lectura actual</th>
                                                <th>Copias procesadas</th>
                                                <th>Fecha lectura</th>
                                                <th>Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @Html.Partial("~/Views/Shared/_Footer.cshtml")
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/dataTable/jquery-3.5.1.js"></script>
    <script src="~/js/dataTable/jquery.dataTables.min.js"></script>
    <script src="~/js/dataTable/dataTables.bootstrap5.min.js"></script>
    <script>
        function llenarTablaLecturas() {
            $.ajax({
                url: "/Lectura/ConsultarLecturas",
                type: "POST",
                success: function (response) {
                    
                    $("#tablaLecturas").DataTable({
                        order: [[0, 'desc']],
                        destroy: true,
                        data: response,
                        processing: true,
                        language: {
                            url: '../json/es_ES.json',
                        },
                        responsive: true,
                        "columns": [
                            {
                                "data": function (data) {
                                    return data.impresoras[0].nombre
                                }
                            },
                            {
                                "data": function (data) {
                                    return data.impresoras[0].areas[0].nombre
                                }
                            },
                            { "data": "lecturaAnterior" },
                            { "data": "lecturaActual" },
                            { "data": "numeroCopias" },
                            { "data": "fechaLectura" },
                            {
                                "data": function(data) {
                                    let opciones = ''

                                    opciones += '<form method="POST" action="/Lectura/ViewEditar?lectura=' + data.idLectura + '" style="display:inline;">'
                                    opciones += '   <button type="submit" style="color:black;" class="btn btn-icon btn-light btn-sm">'
                                    opciones += '       <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">'
                                    opciones += '           <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325"/>'
                                    opciones += '       </svg>'
                                    opciones += '   </button>'
                                    opciones += '</form>'

                                    return opciones
                                }
                            }
                        ],
                    });
                    
                    
                }
            })
        }

        function mostrarMensajeActivar(elemento) {

            let idImpresora = $(elemento).attr("data-impresoraId")

            Swal.fire({
                title: "¿Estas seguro en activar?",
                //text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Si",
                cancelButtonText: "No"
            }).then((result) => {
                if (result.isConfirmed) {

                    $.ajax({
                        url: "/Impresora/Activar",
                        data: { idImpresora: idImpresora },
                        type: "POST",
                        success: function (response) {
                            if (response > 0) {
                                llenarTablaImpresoras()
                                swal.fire({
                                    icon: "success",
                                    buttonsStyling: false,
                                    confirmButtonText: "Ok!",
                                    title: "Registro activado con éxito!",
                                    customClass: {
                                        confirmButton: "btn font-weight-bold btn-light-primary"
                                    }
                                }).then(function () {
                                    //KTUtil.scrollTop();
                                });
                            } else {
                                swal.fire({
                                    icon: "error",
                                    buttonsStyling: false,
                                    confirmButtonText: "Ok!",
                                    title: "Ocurrio un error, por favor contacte a su administrador!",
                                    customClass: {
                                        //confirmButton: "btn font-weight-bold btn-light-primary"
                                    }
                                }).then(function () {
                                    KTUtil.scrollTop();
                                });
                            }
                        }
                    })

                }
            });
        }
        function mostrarMensajeDesactivar(elemento) {

            let idImpresora = $(elemento).attr("data-impresoraId")

            Swal.fire({
                title: "¿Estas seguro en desactivar?",
                //text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Si",
                cancelButtonText: "No"
            }).then((result) => {
                if (result.isConfirmed) {

                    $.ajax({
                        url: "/Impresora/Desactivar",
                        data: { idImpresora: idImpresora },
                        type: "POST",
                        success: function (response) {
                            if (response > 0) {
                                llenarTablaImpresoras()
                                swal.fire({
                                    icon: "success",
                                    buttonsStyling: false,
                                    confirmButtonText: "Ok!",
                                    title: "Registro desactivado con éxito!",
                                    customClass: {
                                        confirmButton: "btn font-weight-bold btn-light-primary"
                                    }
                                }).then(function () {
                                    //KTUtil.scrollTop();
                                });
                            } else {
                                swal.fire({
                                    icon: "error",
                                    buttonsStyling: false,
                                    confirmButtonText: "Ok!",
                                    title: "Ocurrio un error, por favor contacte a su administrador!",
                                    customClass: {
                                        //confirmButton: "btn font-weight-bold btn-light-primary"
                                    }
                                }).then(function () {
                                    KTUtil.scrollTop();
                                });
                            }
                        }
                    })

                }
            });
        }

        $(document).ready(function () {

            $('#tablaLecturas').DataTable();

            llenarTablaLecturas()

            setTimeout(() => {
                $("#spinner").hide();
                $("#cardBody").css("visibility", "visible");
            }, "500");

            $("#btnAgregar").click(function (){
                window.location.href = "/Lectura/ViewAgregar"
            })
        })
    </script>
}
